{
	"name": "graphql-mongodb-nodejs",
	"version": "1.0.0",
	"description": "A practice project to showcase GraphQL technology with mongodb.",
	"main": "./build/index.js",
	"private": true,
	"engines": {
		"node": "14.17.5",
		"npm": "6.14.14",
		"yarn": "1.22.11"
	},
	"scripts": {
		"dev": "nodemon --watch src ./src/index.ts",
		"build": "cross-env NODE_ENV=production webpack",
		"start": "node ./build/index.js",
		"seed": "ts-node -r tsconfig-paths/register --transpile-only ./src/Config/seed.ts"
	},
	"keywords": [
		"typescript"
	],
	"author": {
		"name": "Alcalá León Yael Mártin A.",
		"email": "yael.alcalla@gmail.com"
	},
	"license": "ISC",
